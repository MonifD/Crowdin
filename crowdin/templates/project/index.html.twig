{% extends 'project.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="text-center">Project Index</h1>
        <a class="btn btn-primary my-4" href="{{ path('app_project_new') }}">Create New</a>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Content</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.id }}</td>
                        <td>{{ project.name }}</td>
                        <td>{{ project.contenu }}</td>
                        <td>
                            <a class="btn btn-primary me-2" href="{{ path('app_project_show', {'id': project.id}) }}">Show</a>
                            <a class="btn btn-primary" href="{{ path('app_project_edit', {'id': project.id}) }}">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
